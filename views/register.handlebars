<div class="page-header">
        <h1>Register</h1>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
            {{#if user}}
              <h3 class="panel-title">Change Profile for UserId : {{{user.username}}}</h3>
            {{else}}
              <h3 class="panel-title">Register</h3>
            {{/if}}                       
           
            </div>
            <div class="panel-body">            
                <form name="frm" method="post" action="/users/register">
                   <div class="form-group">
                    <label>User Name</label>
                       {{#if user}}
                            <input type="text" class="form-control" ng-model="user.userid" placeholder="User Id" name="userid" value="{{{user.userid}}}" required>
                       {{else}}
                            <input type="text" class="form-control" ng-model="user.userid" placeholder="User ID" name="userid" required>
                       {{/if}}
                       <span ng-show="frm.userid.$dirty && frm.userid.$error.required">UserID is required !</span>
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                       {{#if user}}
                            <input type="email" class="form-control" ng-model="user.email" placeholder="Email" name="email" value="{{{user.email}}}" required>
                       {{else}}
                            <input type="email" class="form-control" ng-model="user.email" placeholder="Email" name="email" required>
                       {{/if}}
                       <span ng-show="frm.email.$dirty && frm.email.$error.required">email is required !</span>
                       <span ng-show="frm.email.$dirty && frm.email.$error.email">not an email !</span>
                  </div>

                  <div class="form-group">
                      {{#if user}}
                        <label>Role</label>
                        <select class="selectpicker form-control" name="role" value="{{{user.role}}}>
                          <option>Guest</option>
                          <option>Client</option>
                          <option>Employee</option>                      
                        </select>
                       {{else}}
                        <label>Role</label>
                        <select class="selectpicker form-control" name="role" >
                          <option>Guest</option>
                          <option>Client</option>
                          <option>Employee</option>                      
                        </select>
                       {{/if}}
                  </div>

                       {{#if user}}
                       {{else}}
                           <div class="form-group">
                              <label>User ID</label>
                              <input type="text" class="form-control" ng-model="user.username" placeholder="User ID" name="username" required>
                              <span ng-show="frm.username.$dirty && frm.username.$error.required">User ID is required !</span>
                            </div> 
                            <div class="form-group">
                              <label>Password</label>
                              <input type="password" class="form-control" placeholder="Password" name="password">
                            </div>
                          <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" class="form-control" placeholder="Password" name="password2">
                          </div>
                      {{/if}}
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
              </div>
          </div>
        </div><!-- /.col-sm-12 -->
      </div>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

